<project name="OneFeed" default="run">
	<property name="feed" value="DummyFeed" />

	<target name="make">
		<mkdir dir="bin" />
		<javac srcdir="src" destdir="bin" classpath="src" includeantruntime="false">
			<classpath>
				<pathelement path="lib/commons-codec.jar"/>
				<pathelement path="lib/scribe-1.3.7.jar"/>
			</classpath>
		</javac>
	</target>

	<target name="clean">
		<delete dir="bin" />
	</target>

	<target name="run" depends="make">
		<java classname="OneFeed" fork="true">
			<classpath>
				<pathelement location="bin" />
				<pathelement path="lib/commons-codec.jar"/>
				<pathelement path="lib/scribe-1.3.7.jar"/>
			</classpath>
		</java>
	</target>

	<target name="addfeed" depends="make">
		<java classname="OneFeed">
			<classpath>
				<pathelement location="bin" />
			</classpath>
			<arg value="addfeed" />
			<arg value="${feed}" />
		</java>
	</target>
</project>
